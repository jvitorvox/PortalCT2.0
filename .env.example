# Configurações da Aplicação
VITE_APP_NAME=Portal Casa & Terra
VITE_ENVIRONMENT=development

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# Active Directory (quando implementado)
VITE_AD_DOMAIN=casaterra.local
VITE_AD_ENABLED=false

# Features Flags
VITE_ENABLE_MOCK_AUTH=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# URLs Externas
VITE_COMPANY_WEBSITE=https://casaterra.com
VITE_SUPPORT_EMAIL=suporte@casaterra.com

# Configurações de UI
VITE_THEME=light
VITE_LANGUAGE=pt-BR

# Monitoramento (quando implementado)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Cache
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=300000

# Desenvolvimento
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true